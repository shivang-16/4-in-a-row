PORT=3002
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# Database (PostgreSQL)
DATABASE_URL=postgresql://user:password@localhost:5432/emitrr

# MongoDB
MONGODB_URI=mongodb://localhost:27017/emitrr

# Kafka Configuration (Aiven or any Kafka provider)
# Leave KAFKA_URL empty to disable Kafka (graceful degradation)
KAFKA_URL=your-kafka-broker:26199
KAFKA_CLIENT_ID=emitrr-game-api
KAFKA_TOPIC_GAME_EVENTS=game-events

# Kafka SSL Certificates (paste full PEM content, use \n for newlines)
# These are required for Aiven and most cloud Kafka providers
KAFKA_CA_CERTIFICATE=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----
KAFKA_ACCESS_CERTIFICATE=-----BEGIN CERTIFICATE-----\n...\n-----END CERTIFICATE-----
KAFKA_ACCESS_KEY=-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----

# Game Settings
MATCHMAKING_TIMEOUT_MS=10000
RECONNECTION_TIMEOUT_MS=30000
